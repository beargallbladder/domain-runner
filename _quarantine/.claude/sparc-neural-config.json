            "requirement_analyzer",
            "constraint_detector",
            "edge_case_predictor"
          ]
        },
        "pseudocode": {
          "ai_guided": true,
          "memory_enhanced": true,
          "tools": [
            "algorithm_suggester",
            "complexity_analyzer",
            "pattern_matcher"
          ]
        },
        "architecture": {
          "ai_guided": true,
          "memory_enhanced": true,
          "tools": [
            "design_pattern_recommender",
            "dependency_analyzer",
            "scalability_predictor"
