          "ai_guided": true,
          "memory_enhanced": true,
          "tools": [
            "performance_optimizer",
            "code_quality_analyzer",
            "security_scanner"
          ]
        },
        "coding": {
          "ai_guided": true,
          "memory_enhanced": true,
          "tools": [
            "implementation_assistant",
            "test_generator",
            "documentation_writer"
          ]
        }
