{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RunEnvelope",
  "type": "object",
  "required": ["run_id", "started_at", "spec_version", "status", "metrics"],
  "properties": {
    "run_id": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}-[0-9]{2}Z$"
    },
    "started_at": {
      "type": "string",
      "format": "date-time"
    },
    "ended_at": {
      "type": ["string", "null"],
      "format": "date-time"
    },
    "spec_version": {
      "type": "string",
      "pattern": "^v[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "status": {
      "type": "string",
      "enum": ["ok", "degraded", "failed", "partial", "running"]
    },
    "metrics": {
      "type": "object",
      "required": ["brands_queried", "llm_calls", "errors"],
      "properties": {
        "brands_queried": {"type": "integer", "minimum": 0},
        "llm_calls": {"type": "integer", "minimum": 0},
        "errors": {"type": "integer", "minimum": 0},
        "timeout_rate": {"type": "number", "minimum": 0, "maximum": 1},
        "memory_score_avg": {"type": "number", "minimum": 0, "maximum": 1},
        "consensus_score_avg": {"type": "number", "minimum": 0, "maximum": 1},
        "duration_seconds": {"type": "number", "minimum": 0}
      }
    },
    "error_buckets": {
      "type": "object",
      "additionalProperties": {
        "type": "integer"
      }
    },
    "artifacts": {
      "type": "array",
      "items": {
        "$ref": "artifact.schema.json"
      }
    }
  }
}