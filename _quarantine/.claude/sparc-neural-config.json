    "neural_enhancements": {
      "pattern_recognition": {
        "code_patterns": true,
        "anti_patterns": true,
        "performance_patterns": true,
        "security_patterns": true
      },
      "auto_learning": {
        "from_errors": true,
        "from_successes": true,
        "from_refactorings": true,
        "from_reviews": true
