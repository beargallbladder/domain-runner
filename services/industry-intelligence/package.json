{
  "name": "industry-intelligence",
  "version": "1.0.0",
  "description": "Foundational service for industry mapping, benchmark analysis, and strategic domain targeting",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:foundation": "./test/test-foundation.sh",
    "deploy": "./deploy.sh",
    "validate": "npm run build && npm run test"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "winston": "^3.8.2",
    "axios": "^1.3.4"
  },
  "devDependencies": {
    "@types/node": "^18.15.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/jest": "^29.5.0",
    "typescript": "^4.9.5",
    "ts-node": "^10.9.1",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/test/**/*.test.ts"]
  },
  "keywords": [
    "industry-intelligence", 
    "benchmark-analysis", 
    "domain-targeting",
    "brand-intelligence"
  ]
} 