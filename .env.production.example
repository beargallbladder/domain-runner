DATABASE_URL=postgresql://nexus:IbzPnTJnqc8g0JbdVvBVITq5NVf4Rwu3@dpg-d3c6odj7mgec73a930n0-a.oregon-postgres.render.com/domain_runner

# -----------------------------------------------------------------------------
# Core LLM Providers (Add as you get API keys)
# -----------------------------------------------------------------------------
# OpenAI (GPT-4, GPT-4-turbo, GPT-3.5)
# Get key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic (Claude 3 Opus, Sonnet, Haiku)
# Get key at: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=

# Together AI (Llama 2/3, Mixtral, etc.)
# Get key at: https://api.together.xyz/settings/api-keys
TOGETHER_API_KEY=

# -----------------------------------------------------------------------------
# Additional LLM Providers (Optional - Add when ready)
# -----------------------------------------------------------------------------
# Google AI (Gemini Pro, Palm)
# Get key at: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=

# Cohere (Command, Generate)
# Get key at: https://dashboard.cohere.com/api-keys
COHERE_API_KEY=

# Groq (Fast inference for Llama, Mixtral)
# Get key at: https://console.groq.com/keys
GROQ_API_KEY=

# Perplexity AI
# Get key at: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=

# Mistral AI
# Get key at: https://console.mistral.ai/api-keys
MISTRAL_API_KEY=

# AI21 Labs (Jurassic)
# Get key at: https://studio.ai21.com/account/api-key
AI21_API_KEY=

# Replicate (Open models)
# Get key at: https://replicate.com/account/api-tokens
REPLICATE_API_KEY=

# HuggingFace (Inference API)
# Get key at: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=

# -----------------------------------------------------------------------------
# Sentinel Drift Detection Configuration
# -----------------------------------------------------------------------------
# Drift score < 0.3 = stable (answers consistent)
DRIFT_THRESHOLD_STABLE=0.3

# Drift score > 0.7 = decayed (answers significantly different)
DRIFT_THRESHOLD_DECAYED=0.7

# How many days back to look for baseline comparisons
SIMILARITY_WINDOW_DAYS=7

# -----------------------------------------------------------------------------
# LLM Request Configuration
# -----------------------------------------------------------------------------
# Timeout for each LLM API call (seconds)
LLM_TIMEOUT_SECONDS=30

# Number of retries on failure
LLM_MAX_RETRIES=2

# Temperature for LLM responses (0.0 = deterministic, 1.0 = creative)
LLM_TEMPERATURE=0.0

# Maximum tokens in LLM response
LLM_MAX_TOKENS=500

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable automatic drift detection on queries
ENABLE_DRIFT_DETECTION=true

# Enable competitive ranking calculations
ENABLE_COMPETITIVE_RANKING=true

# Enable caching of LLM responses
ENABLE_RESPONSE_CACHE=true

# Cache TTL in seconds (1 hour = 3600)
RESPONSE_CACHE_TTL=3600

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# Port to run on (Render sets this automatically)
PORT=8080

# Rust logging level (error, warn, info, debug, trace)
RUST_LOG=info

# Number of database connections in pool
DB_POOL_SIZE=20

# Database connection timeout (seconds)
DB_CONNECT_TIMEOUT=10

# -----------------------------------------------------------------------------
# Rate Limiting (Optional - for production)
# -----------------------------------------------------------------------------
# Max requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# Max concurrent requests
MAX_CONCURRENT_REQUESTS=100

# -----------------------------------------------------------------------------
# Monitoring & Observability (Optional)
# -----------------------------------------------------------------------------
# Sentry DSN for error tracking
# SENTRY_DSN=

# DataDog API key for metrics
# DATADOG_API_KEY=

# New Relic license key
# NEW_RELIC_LICENSE_KEY=

# -----------------------------------------------------------------------------
# Security (Production)
# -----------------------------------------------------------------------------
# API key for authenticated endpoints (generate random string)
# API_SECRET_KEY=

# Allowed CORS origins (comma-separated)
CORS_ALLOWED_ORIGINS=*

# Enable HTTPS redirect
FORCE_HTTPS=false

# -----------------------------------------------------------------------------
# Patent Demonstration Mode
# -----------------------------------------------------------------------------
# Run in demo mode with synthetic data (for CIP filing demos)
DEMO_MODE=false

# Use mock LLM responses (for testing without API keys)
MOCK_LLM_RESPONSES=false
